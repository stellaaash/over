---
import BaseLayout from '../layouts/BaseLayout.astro';

const pageTitle = "About Me";

const quote = "The aisling (Irish for 'dream' / 'vision', pronounced [ˈaʃl̠ʲəɲ], approximately /ˈæʃlɪŋ/ ASH-ling), or vision poem, is a mythopoeic poetic genre that developed during the late 17th and 18th centuries in Irish language poetry.";
const quoteLink = "https://en.wikipedia.org/wiki/Aisling";

const skills = ["HTML", "CSS", "C", "C++", "Docker"];
---

<BaseLayout pageTitle={pageTitle}>
  <!-- We use is:global to affect components that were generated by the BaseLayout -->
  <style is:global>
    h1 {
      font-size: 4rem;
    }

    .skill {
      font-weight: bold;
    }
  </style>

  <h2>Aisling Fontaine</h2>

  <blockquote cite="{quoteLink}">
    {quote}
  </blockquote>
  <p>Hi there! My name is ash, short for Aisling Fontaine. I also go by FireInsidE and stellaaa.sh online.</p>

  <p>I am currently studying at 42 school in Switzerland, happy to learn low-level concepts in a peer-learning environment.</p>

  <p>This is supposed to be my blog, but as you can imagine, this is still very much a work in progress, so come back regularly for updates!</p>

  <h2>My Skills</h2>

  <p>Here are some of my skills:</p>
  <ul>
    {skills.map((skill) => <li class="skill">{skill}</li>)}
  </ul>
</BaseLayout>
